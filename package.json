{
  "name": "billing-software",
  "version": "1.0.1",
  "description": "Electron-based Billing Software",
  "main": "main.js",
  "private": true,
  "author": {
    "name": "DigitalpandaAxom",
    "email": "digitalpanda4u@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mrinanga/TRailElectron.git"
  },
  "scripts": {
    "start": "electron .",
    "lint": "electron-builder --help",
    "package": "electron-builder --dir",
    "dist": "electron-builder --win",
    "dist:portable": "electron-builder --win portable",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder --win --publish always"
  },
  "build": {
    "appId": "com.digitalpanda.billing-software",
    "productName": "Billing Software",
    "copyright": "Copyright Â© 2024 DigitalpandaAxom",
    "icon": "assets/icons/icon.ico",
    "directories": {
      "output": "dist",
      "buildResources": "assets",
    "releaseInfo": {
    "releaseNotes": "Fixed token error and improved auto-update reliability."
  }
    },
    "files": [
      "build/**/*",
      "intro.html",
      "main.js",
      "assets/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icons/icon.ico",
      "signAndEditExecutable": false,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "DigitalpandaAxom"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Billing Software",
      "uninstallDisplayName": "Billing Software",
      "deleteAppDataOnUninstall": false,
      "uninstallerIcon": "assets/icons/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}",
      "useZip": true
    },
    "publish": {
      "provider": "github",
      "owner": "Mrinanga",
      "repo": "TRailElectron",
      "releaseType": "release"
    },
    "asar": true,
    "asarUnpack": [
      "assets/**/*"
    ],
    "releaseInfo": {
      "releaseNotes": "Initial release"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.12",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}